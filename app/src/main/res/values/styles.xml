<resources>

    <style name="Theme.c9theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primaryColor</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/secondaryColor</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
    </style>

    <style name="testHeading" parent="Base.TextAppearance.AppCompat.Medium">

        <item name="android:textColor">#424242</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="progressStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">7</item>
        <item name="android:max">40</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
    </style>

    <style name="numberingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#ff6f6f6f</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="totalStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#ffbebebe</item>
    </style>


</resources>